<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KILLDDL"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        >

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="300dp"
            android:layout_height="295dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_calen"
            android:gravity="center_vertical|left|start"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp"></CalendarView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:paddingRight="24dp"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:text="Highlighted ToDo-s"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Create Task" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160sp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            >
            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="60sp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="33dp"
                    android:layout_height="60sp"/>

                <TextView
                    android:id="@+id/task1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_name" />
                <TextView
                    android:id="@+id/task_time1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="12 pm" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="60sp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="33dp"
                    android:layout_height="60sp"/>

                <TextView
                    android:id="@+id/task2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_name" />
                <TextView
                    android:id="@+id/task_time2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="12 pm" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="60sp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="33dp"
                    android:layout_height="60sp"/>

                <TextView
                    android:id="@+id/task3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_name" />
                <TextView
                    android:id="@+id/task_time3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="12 pm" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:onClick="ShowPopup"
                    app:backgroundTint="@color/app_green"
                    app:srcCompat="@drawable/ic_add" />
            </LinearLayout>





        </LinearLayout>
    </ScrollView>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_main">
    </android.support.design.widget.BottomNavigationView>


</LinearLayout>
